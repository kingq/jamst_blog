
<%= form_for @article, :html => { :multipart => true }, :remote => true do |f| %>
  <div class="field">
    <%= file_field_tag "draft_img", id: 'draft_img' %>
  </div>

  <div class="control-group optional form-group field" style="margin-top: 10px" >
	  <%= f.label :category, 'Category', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.select :category, options_for_select(category.all.collect { |p| [ p.name, p.id ] }, ''), {include_blank: true}, {class: 'form-control input-sm', style: 'width: 280px;' } %>
	  </div>
  </div>

  <div class="control-group optional form-group field" style="margin-top: 10px" >
	  <%= f.label :title, 'Title', class: 'password optional control-label' %>
	  <div class="controls">
	    <%= f.text_field :title, class: 'form-control input-sm', style: 'width: 280px;' %>
	  </div>
  </div>

  <div class="control-group optional form-group field" style="margin-top: 10px" >
	  <%= f.label :content, 'Content', class: 'password optional control-label' %>
	  <div class="controls">
	     <%= text_area_tag 'article[content]', @article.content, { rows: 4, class: 'form-control input-sm'  } %>
	  </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
